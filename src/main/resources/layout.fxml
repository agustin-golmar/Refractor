<?xml version = "1.0" encoding = "UTF-8"?>
<!-- Imports -->
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<!-- Layout -->
<BorderPane xmlns:fx = "http://javafx.com/fxml" fx:controller = "ar.nadezhda.refractor.controller.FrontController">
	<stylesheets>
		<URL value = "@style.css"/>
	</stylesheets>
	<top>
		<HBox spacing = "5">
			<padding>
				<Insets top = "5" right = "5" bottom = "5" left = "5"/>
			</padding>
			<Button text = "Open" onAction = "#open"/>
			<Button text = "Save" onAction = "#save"/>
			<Button text = "Remove" onAction = "#remove"/>
			<Button text = "Display" onAction = "#display"/>
		</HBox>
	</top>
	<left>
		<VBox spacing = "5">
			<padding>
				<Insets top = "5" right = "5" bottom = "5" left = "5"/>
			</padding>
			<Button text = "Copy" onAction = "#copy"/>
			<Button fx:id = "rgbSplit" text = "RGB Split" onAction = "#control"/>
			<!-- More functions... -->
		</VBox>
	</left>
	<center>
		<VBox spacing = "5">
			<padding>
				<Insets top = "5" right = "5" bottom = "5" left = "5"/>
			</padding>
			<ListView fx:id = "openImages" minWidth = "480"/>
		</VBox>
	</center>
	<right>
		<VBox spacing = "5">
			<padding>
				<Insets top = "5" right = "10" bottom = "5" left = "5"/>
			</padding>
			<CheckBox fx:id = "useConfigForLoad" text = "Use config for load"/>
		</VBox>
	</right>
	<bottom>
		<VBox spacing = "5">
			<padding>
				<Insets top = "5" right = "5" bottom = "5" left = "5"/>
			</padding>
			<Label fx:id = "mouseLocation" text = "Location (x, y) = (0, 0)"/>
			<Label fx:id = "areaDimension" text = "Area (width, height) = (0, 0)"/>
			<Label fx:id = "pixelCount" text = "Pixel Count: 0"/>
			<Label fx:id = "grayAverage" text = "Average (R, G, B) = (0.0, 0.0, 0.0)"/>
		</VBox>
	</bottom>
</BorderPane>
