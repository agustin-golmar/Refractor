<?import javafx.scene.layout.*?>
<!-- Layout -->
<GridPane xmlns:fx = "http://javafx.com/fxml" fx:controller = "ar.nadezhda.refractor.controller.ResourceController">
	<stylesheets>
		<URL value = "@style.css"/>
	</stylesheets>
	<HBox spacing = "10">
		<VBox spacing = "10">
			<Button GridPane.columnIndex = "0" GridPane.rowIndex = "0" text = "Open" onAction = "#open"/>
			<Button GridPane.columnIndex = "0" GridPane.rowIndex = "1" text = "Save" onAction = "#save"/>
		</VBox>
		<VBox spacing = "5">
			<CheckBox GridPane.columnIndex = "1" GridPane.rowIndex = "0" fx:id = "useConfigForLoad" text = "Use config for load"/>
		</VBox>
	</HBox>

